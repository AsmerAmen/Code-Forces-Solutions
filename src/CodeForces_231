#include <iostream>
using namespace std;

int main() {
	int number, count=0, sum;
	int input;
	cin>> number;
	for (int i= 0; i<number; i++){
		sum = 0;
		for(int j=0; j<3; j++){
			cin>>input;
			sum +=input;
		}
		if(sum>1)	count++;
	}
	cout<<count<<endl;

	return 0;
}
